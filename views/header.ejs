<html>
    <head>
        <meta charset="utf-8">
        <title>Task List</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
        <style>
            ui.main.container {
                margin-top: 7em;
            }
        </style>
    </head>
    <body>
        <div class="ui container menu inverted">
            <div class="header item ">Task List</div>
            <a class="item" href="/"><i class="tasks icon"></i>Home</a>
            <a class="item right" href="/tasks/new"><i class="file outline icon"></i>Add New Task</a>
        </div>
        <% if(success && success.length>0) { %>
            <div class="ui container">
                <div class="ui one steps">
                    <div class="completed step">
                        <i class="payment icon"></i>
                        <div class="content">
                            <div class="title">
                               <%= success %>
                            </div>
                            <% if (flashDescription && flashDescription.length>0) {%>
                            <div class="description">
                                <%= flashDescription %>
                            </div>
                            <% } %>
                        </div>
                        
                    </div>
                </div>
                <br>
                
            </div>
        <% } %>
